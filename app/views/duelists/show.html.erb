<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @duelist.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @duelist.age %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @duelist.rating %>
</p>

<p>
  <strong>Favourite card:</strong>
  <%= @duelist.favourite_card %>
</p>

<p>
<img src="<%= @duelist.picture %>" class="duelist-display">
</p>

<p>
  <strong>By User:</strong>
  <%= @duelist.user.username %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <% if @duelist == card.duelist %>
      <tr>
        <td><%= card.name %></td>
        <td><%= link_to 'Show', card, :class => "button info radius tiny" %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<div class="show-action">
<% if current_user == @duelist.user %>
<%= link_to 'Edit', edit_duelist_path(@duelist), :class => "button secondary radius tiny" %>
<% end %>
<%= link_to 'Back', duelists_path, :class => "button secondary radius tiny" %>
</div>
