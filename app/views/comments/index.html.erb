<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.body %></td>
        <td><%= comment.user %></td>
        <td><%= comment.card %></td>
        <td><%= button_to 'Show', comment, :class => "button success radius tiny" %></td>
        <td><%= button_to 'Edit', edit_comment_path(comment), :class => "button secondary radius tiny" %></td>
        <td><%= button_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button alert radius tiny" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
