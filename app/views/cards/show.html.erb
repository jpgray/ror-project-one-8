<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @card.name %>
</p>

<p>
  <strong>Atk:</strong>
  <%= @card.atk %>
</p>

<p>
  <strong>Def:</strong>
  <%= @card.def %>
</p>

<p>
<img src="<%= @card.picture %>" class="card-display">
</p>
<br>
<p>
  <strong>By User:</strong>
  <%= @card.user.username %>
</p>

<p>
  <strong>Duelist:</strong>
  <%= @card.duelist.name %>
  <%= link_to 'Show', @card.duelist, :class => "button info radius tiny" %>
</p>
<div class="show-action">
<% if current_user == @card.user %>
<%= button_to 'Edit', edit_card_path(@card), :class => "button secondary radius tiny" %>
<% end %>
<%= link_to 'Back', cards_path, :class => "button secondary radius tiny" %>
</div>

<%= render 'comments/comments' %>

<h3> Add Comment </h3>

<div class="form_field_div"
<%= form_for([@card, @card.comments.build]) do |form| %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div class="field">
  <%= form.label :body %>
  <%= form.text_area :body %>
</div>

<div class="field">
  <%= form.label :user_id %>
  <%= form.text_field :user_id %>
</div>

<div class="field">
  <%= form.label :card_id %>
  <%= form.text_field :card_id %>
</div>

<div class="actions">
  <%= form.submit({:class => 'button success radius tiny'}) %>
</div>

<p><span data-tooltip aria-haspopup="true" class="has-tip" title="Yes!">Should I post a comment?</span></p>

<% end %>
</div>
